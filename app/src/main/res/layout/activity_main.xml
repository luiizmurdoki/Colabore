<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".main.MainActivity">

    <ImageView
        android:id="@+id/logoMainIv"
        android:layout_height="@dimen/copy_button_height"
        android:layout_width="@dimen/copy_button_width"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/small_image"
        android:src="@drawable/ic_earth"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/include"
        layout="@layout/home_header_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@id/logoMainIv" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardCv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/corner_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/small_image"
        app:layout_constraintTop_toBottomOf="@id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

   <!-- <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bannersRv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/include"
        android:layout_margin="@dimen/small_margin"
        tools:listitem="@layout/item_card"
        tools:orientation="horizontal"
        tools:scrollbars="horizontal" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/donationCv"
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        android:layout_margin="@dimen/small_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/exploreCv"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/colorGreen"
        app:cardCornerRadius="@dimen/button_deafult"
        app:layout_constraintTop_toBottomOf="@id/cardCv">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/small_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doações"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/small_image"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/exploreCv"
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/donationCv"
        app:cardBackgroundColor="@color/colorGreen"
        app:cardCornerRadius="@dimen/button_deafult"
        app:layout_constraintTop_toBottomOf="@id/cardCv">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_find"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/small_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descubra"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/small_image"
            android:textSize="@dimen/text_subtitle"
            android:textStyle="bold"/>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>