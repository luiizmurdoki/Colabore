<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardPicture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    app:cardCornerRadius="@dimen/button_format_extract_height"
    android:layout_margin="@dimen/small_image"
    android:layout_marginBottom="@dimen/small_image">

        <ImageView
            android:id="@+id/imageIvGrid"
            android:layout_width="@dimen/button_format_extract_height"
            android:layout_height="@dimen/button_format_extract_height"
            android:layout_gravity="center"
            tools:src ="@drawable/ic_humanitarian_help" />

</androidx.cardview.widget.CardView>



