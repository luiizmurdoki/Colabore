<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardEventCv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:layout_gravity="center_horizontal"
        app:cardElevation="@dimen/corner_large"
        app:cardCornerRadius="@dimen/corner_large"
        android:layout_margin="@dimen/small_image"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ImageIv"
                android:layout_width="@dimen/accredited_logo_size"
                android:layout_height="@dimen/accredited_logo_size"
                android:layout_marginStart="@dimen/corner_small"
                android:layout_marginEnd="@dimen/corner_small"
                android:background="@drawable/ic_confetti"
                app:layout_constraintBottom_toTopOf="@+id/ongTextEventTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ongTextEventTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_file_type_size"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/text_title"
                tools:text = "ACCD \n\n Festa Junina 2020"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

